rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper function to check if user owns document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Products - Public read, Admin write
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Users - Own profile only
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      allow read: if isAdmin(); // Admin can read all users
    }

    // Orders - Own orders only
    match /orders/{orderId} {
      allow read: if request.auth != null &&
                     resource.data.userId == request.auth.uid;
      allow create: if request.auth != null &&
                       request.resource.data.userId == request.auth.uid;
      allow read, write: if isAdmin(); // Admin can manage all orders
    }

    // Referrals - Read own referrals only
    match /referrals/{referralId} {
      allow read: if request.auth != null &&
                     (resource.data.referrerId == request.auth.uid ||
                      resource.data.referredUserId == request.auth.uid);
      allow create: if request.auth != null;
      allow write: if isAdmin(); // Admin can manage referrals
    }

    // Notifications - Read/update own, admin can create for any user
    match /notifications/{notificationId} {
      allow read, update: if request.auth != null &&
                             resource.data.userId == request.auth.uid;
      allow create: if request.auth != null &&
                       (request.resource.data.userId == request.auth.uid || isAdmin());
      allow delete: if false;
    }
  }
}
